<div class="hero-section">
  <div class="hero-content">
    <h1>Welcome to Example App</h1>
    <p class="hero-subtitle">A demonstration of Rails Route Tester's test capture functionality</p>
    
    <div class="hero-stats">
      <div class="stat">
        <span class="stat-number"><%= @total_users %></span>
        <span class="stat-label">Users</span>
      </div>
    </div>
    
    <div class="hero-actions">
      <%= link_to "View All Users", users_path, class: "btn btn-primary" %>
      <%= link_to "About Us", about_path, class: "btn btn-secondary" %>
    </div>
  </div>
</div>

<div class="content-section">
  <h2>Recent Users</h2>
  
  <% if @recent_users.any? %>
    <div class="users-grid">
      <% @recent_users.each do |user| %>
        <div class="user-card">
          <div class="user-avatar">
            <img src="<%= user.avatar_url %>" alt="<%= user.name %>" />
          </div>
          <div class="user-info">
            <h3><%= link_to user.name, user_path(user), class: "user-link" %></h3>
            <p class="user-email"><%= user.email %></p>
            <% if user.bio.present? %>
              <p class="user-bio"><%= truncate(user.bio, length: 100) %></p>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
    
    <div class="view-all-link">
      <%= link_to "View All Users â†’", users_path, class: "link-arrow" %>
    </div>
  <% else %>
    <div class="empty-state">
      <p>No users yet. <%= link_to "Create the first user", new_user_path %>!</p>
    </div>
  <% end %>
</div>

<div class="features-section">
  <h2>Features</h2>
  <div class="features-grid">
    <div class="feature-card">
      <h3>User Management</h3>
      <p>Create, view, edit, and delete users with full CRUD functionality.</p>
    </div>
    <div class="feature-card">
      <h3>Search & Filter</h3>
      <p>Search through users by name or email with real-time filtering.</p>
    </div>
    <div class="feature-card">
      <h3>Responsive Design</h3>
      <p>Works perfectly on desktop, tablet, and mobile devices.</p>
    </div>
  </div>
</div> 